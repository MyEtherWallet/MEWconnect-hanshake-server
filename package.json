{
  "name": "MEWconnect-Signal-Server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rimraf dist/ && babel ./src --out-dir dist/",
    "start": "npm run build && node ./dist/run.js",
    "debug": "npm run build && DEBUG=signal:* node ./dist/run.js",
    "example": "babel-node ./example/example.js",
    "asFunctionExample": "babel-node ./example/example2.js",
    "prod": "node dist/run.js",
    "dev": "env NODE_ENV=development nodemon --exec npm start",
    "test": "npm run build && NODE_ENV=test CONNECTION_TIMEOUT=1000 jest --detectOpenHandles --forceExit --runInBand --verbose --silent --noStackTrace",
    "test:verbose": "npm run build && NODE_ENV=test CONNECTION_TIMEOUT=1000 jest --detectOpenHandles --forceExit --runInBand --verbose",
    "test:debug": "npm run build && NODE_ENV=test CONNECTION_TIMEOUT=1000 DEBUG=* jest --detectOpenHandles --forceExit --runInBand --verbose",
    "test:bail": "npm run build && NODE_ENV=test CONNECTION_TIMEOUT=1000 jest --bail --detectOpenHandles --forceExit --runInBand --verbose",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration"
  },
  "dependencies": {
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "ioredis": "^3.2.2",
    "lodash": "^4.17.11",
    "logging": "^3.2.0",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.1",
    "socket.io": "^2.0.4",
    "socket.io-redis": "^5.2.0",
    "twilio": "^3.17.1",
    "validate": "^4.5.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "crypto": "^1.0.1",
    "eccrypto": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "ethereumjs-util": "^5.2.0",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "regenerator-runtime": "^0.13.1",
    "secp256k1": "^3.5.2",
    "simple-peer": "^9.2.0",
    "wrtc": "^0.3.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "@clients": "dist/clients",
    "@config": "dist/config",
    "@helpers": "dist/helpers"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@clients(.*)$": "<rootDir>/dist/clients$1",
      "@config(.*)$": "<rootDir>/dist/config$1",
      "@helpers(.*)$": "<rootDir>/dist/helpers$1",
      "@utils(.*)$": "<rootDir>/test/utils$1",
      "@dist(.*)$": "<rootDir>/dist$1",
      "@/(.*)$": "<rootDir>dist$1"
    }
  }
}
