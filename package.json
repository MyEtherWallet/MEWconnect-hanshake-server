{
  "name": "MEWconnect-Signal-Server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rimraf dist/ && babel ./src --out-dir dist/",
    "start": "npm run build && node ./dist/run.js",
    "debug": "npm run build && DEBUG=signal:* node ./dist/run.js",
    "example": "babel-node ./example/example.js",
    "asFunctionExample": "babel-node ./example/example2.js",
    "prod": "node dist/run.js",
    "start:docker": "npm run build && pm2-runtime  dist/run.js",
    "prod:docker": "pm2-runtime  dist/run.js",
    "dev": "env NODE_ENV=development nodemon --exec npm start",
    "test": "env NODE_ENV=development mocha --exit --require babel-core/register test/*",
    "build:docker": "docker build --force-rm  --no-cache --tag=handshake-server ."
  },
  "dependencies": {
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "eccrypto": "^1.0.3",
    "ethereumjs-util": "^5.1.5",
    "ioredis": "^3.2.2",
    "logging": "^3.2.0",
    "morgan": "~1.9.0",
    "secp256k1": "^3.5.0",
    "socket.io": "^2.0.4",
    "socket.io-redis": "^5.2.0",
    "twilio": "^3.17.1",
    "validate": "^4.5.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.2.0"
  }
}
